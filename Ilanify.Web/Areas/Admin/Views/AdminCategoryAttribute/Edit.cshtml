@model Ilanify.Domain.Entities.CategoryAttribute

@{
    ViewBag.Title = "Edit Category Attribute";
    Layout = "_AdminLayout";
}

<h2>Edit Category Attribute @Model.Name</h2>

<form asp-action="Edit" asp-controller="AdminCategoryAttribute" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group mt-2">
        <label for="CategoryId">Category ID</label>
        <select class="form-control" id="CategoryId" name="CategoryId" asp-for="CategoryId" asp-items="ViewBag.Categories" required>
        </select>
    </div>
    <div class="form-group mt-3">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" asp-for="Name" required>
    </div>
    <div class="form-group mt-3">
        <label for="DataType">Type</label>
        <select class="form-control" id="DataType" name="DataType" asp-for="DataType" required>
            <option value="1">Text</option>
            <option value="2">Number</option>
            <option value="3">Boolean</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>