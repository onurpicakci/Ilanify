@model int

@{
    ViewBag.Title = "Real Estate Dashboard";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h2 class="mb-5">Ilanify Admin Paneline Hoşgeldiniz</h2>

    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 mb-5">
                <div class="card h-100">
                    <div class="card-body" style="background-color: #233348; color: white;">
                        <h5 class="card-title">Toplam İlan Sayısı: @Model </h5>
                        <img src="~/images/admin/real-estates-home.jpg" class="mt-3" alt="Real Estate" width="456px" height="256px"/>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6 col-md-6 mb-5">
                <div class="card h-100">
                    <div class="card-body" style="background-color: #233348; color: white;">
                        <h5 class="card-title">Toplam Şehir Sayısı: @Model </h5>
                        <img src="~/images/admin/cities-home.jpg" class="mt-3" alt="Real Estate" width="456px" height="256px"/>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-6 mb-5">
                <div class="card h-100">
                    <div class="card-body" style="background-color: #233348; color: white;">
                        <h5 class="card-title">Toplam Kategori Sayısı: @ViewBag.Categories</h5>
                        <img src="~/images/admin/category-home.jpg" class="mt-3" alt="Categories" width="456px" height="256px"/>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-6 mb-5">
                <div class="card h-100">
                    <div class="card-body" style="background-color: #233348; color: white;">
                        <h5 class="card-title">Toplam Kullanıcı Sayısı: @ViewBag.RegisteredUsers</h5>
                        <img src="~/images/admin/register-home.jpg" class="mt-3" alt="Users" width="456px" height="256px"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>