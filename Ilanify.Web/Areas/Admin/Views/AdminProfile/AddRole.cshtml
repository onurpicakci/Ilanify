@model Ilanify.Areas.Admin.Models.ViewModels.ChangeRoleViewModel

@{
    ViewBag.Title = "Change Role";
    Layout = "_AdminLayout";
}

<div class="change-role-container">
    <div class="card change-role-card">
        <div class="card-header">
            <h3>Change Role for @Model.UserEmail</h3>
        </div>
        <div class="card-body">
            <form asp-action="AddRole" method="post" class="role-change-form">
                <input type="hidden" asp-for="UserId" />
                <div class="row">
                    <div class="col-md-6">
                        <h5>Current Roles</h5>
                        <ul class="list-group current-roles-list" id="currentRoles">
                            @foreach (var role in Model.UserRoles)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center" data-role="@role">
                                    @role
                                    <button type="button" class="role-remove-btn btn btn-danger btn-sm">Remove</button>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h5>Available Roles</h5>
                        <select asp-for="UserRoles" class="form-select available-roles-select" id="availableRoles" asp-items="@(new SelectList(Model.AllRoles))" multiple>
                        </select>
                        <button type="button" class="role-add-btn btn btn-success btn-sm mt-2">Add Selected Roles</button>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="save-changes-btn btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>