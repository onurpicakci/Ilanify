@using System.Security.Claims
@model System.Collections.Generic.IEnumerable<Ilanify.Domain.Entities.RealEstate>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container my-listings">
    <div class="row">
        <div class="col-md-3">
            @Html.Partial("/Views/Default/_Leftbar.cshtml")
        </div>
        <div class="col-md-8 mt-4">
            @foreach (var realEstate in Model)
            {
                <div class="card mb-3">
                    <div class="row no-gutters">
                        <div class="col-md-3">
                            @foreach (var image in realEstate.Images.Take(1))
                            {
                                <a href="@Url.Action("Details", "RealEstate", new { realEstateId = realEstate.Id })" class="text-decoration-none">
                                    <img src="@Url.Content($"~/images/real-estate-images/{image.ImageUrl}")" class="card-img" alt="@realEstate.Title">
                                </a>
                            }
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="profile-estate-title">@realEstate.Title</h5>
                                <p class="profile-estate-text mt-2">@realEstate.Type @realEstate.Category.Name - @realEstate.Location.District / @realEstate.Location.Neighborhood</p>

                                <p class="profile-estate-text">Yayınlanma Tarihi: @realEstate.ListingDate.ToString("dd.MM.yyyy")</p>
                                <div class="position-absolute">
                                    <span class="price">@realEstate.Price.ToString("N1") TL</span>
                                </div>
                                <form asp-action="RemoveFavorite" asp-controller="RealEstate" method="post" class="favorite-form">
                                    <input type="hidden" name="userId" value="@User.FindFirst(ClaimTypes.NameIdentifier).Value"/>
                                    <input type="hidden" name="realEstateId" value="@realEstate.Id"/>
                                    <button type="submit" class="btn btn-favorite">Favorilerden Çıkar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>