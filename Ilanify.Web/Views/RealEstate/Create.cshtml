@using Ilanify.Domain.Entities
@model RealEstate

@{
    ViewBag.SpecificScript = true;
}

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="col-md-12 create-page">
        <div class="form-group">
            <label for="Title">Başlık</label>
            <input asp-for="Title" class="form-control"/>
        </div>
        <div class="form-group">
            <label for="Description">Açıklama</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label for="images">Resimler</label>
            <input type="file" name="images" class="form-control" multiple/>
        </div>
        <div class="form-group">
            <label for="Price">Fiyat</label>
            <input asp-for="Price" class="form-control"/>
        </div>
        <div class="form-group">
            <label for="SquareMeters">Metrekare</label>
            <input asp-for="SquareMeters" class="form-control"/>
        </div>
        <div class="form-group">
            <label for="Location.City">Şehir</label>
            <select id="citySelect" asp-for="Location.City" class="form-control" onchange="loadDistricts()">
                <option value="">Şehir Seçiniz</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Location.District">İlçe</label>
            <select id="districtSelect" asp-for="Location.District" class="form-control" onchange="loadNeighborhoods()">
                <option value="">İlçe Seçiniz</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Location.Neighborhood">Mahalle</label>
            <input id="neighborhoodInput" asp-for="Location.Neighboord" class="form-control" placeholder="Mahalle giriniz">
        </div>
        <div class="form-group">
            <label for="RealEstateType">İlan Tipi</label>
            <select asp-for="Type" class="form-control">
                <option value="1">Satılık</option>
                <option value="2">Kiralık</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Category">Kategori</label>
            <select id="categorySelect" asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control" onchange="loadCategoryAttributes()">
                <option value="">-- Seçiniz --</option>
            </select>
        </div>
        <div id="categoryAttributes"></div>
        <button type="submit" class="btn btn-primary">İlanı Ekle</button>
    </div>
</form>