@model Ilanify.Domain.Entities.RealEstate

<h2>Yeni İlan Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">Başlık</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Description">Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="Price">Fiyat</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ListingDate">Listeleme Tarihi</label>
        <input asp-for="ListingDate" type="date" class="form-control" />
    </div>
    <!-- Diğer gerekli alanları ekleyebilirsiniz -->
    <button type="submit" class="btn btn-primary">İlanı Ekle</button>
</form>