@using Ilanify.DataAccess.Dtos
@model IEnumerable<CityRealEstateCount>

@{
    ViewData["Title"] = "Anasayfa";
}

<div class="container">
    <div class="row">
        @foreach (var locationGroup in Model)
        {
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@locationGroup.City</h5>
                        <p class="card-text">Toplam @locationGroup.Count ilan</p>
                        <a href="@Url.Action("ListRealEstatesByLocation", "RealEstate", new { location = locationGroup.City })" class="btn btn-primary">İlanları Gör</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>