<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Ilanify.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/ListRealEstatesByLocation/style.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/RealEstateDetail/style.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Ilanify.Web.styles.css" asp-append-version="true"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

</head>
<body>
<header>
    @await Html.PartialAsync("/Views/Default/_Navbar.cshtml")
    @if (ViewData["Title"] == "Anasayfa")
    {
        <section class="hero-section">
            <div class="container d-flex align-items-center justify-content-center fs-1">
                <div class="search-container">
                    <input type="text" placeholder="Konum, ilan no ya da emlak ofisi adıyla arayın (Örn. 1234-123456)" class="search-input">
                    <button class="search-button">Ara</button>
                </div>
            </div>
        </section>
    }
</header>

<div class="container main-container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/RealEstateDetail/index.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@if (ViewBag.SpecificScript == true)
{
    <script src="~/js/CreateRealEstate/index.js"></script>
}
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>